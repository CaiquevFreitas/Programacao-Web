<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

    html,
    body {
      height: 100%;
      background-color: rgb(20, 47, 129);
      margin: 0;
      font-family: "Poppins", sans-serif;
    }

    button {
      margin-bottom: 5px;
    }

    h1 {
      margin-top: 5px;
      font-size: 60px;
      color: white;
    }

    a {
      text-decoration: none;
    }

    #topo {
      text-align: center;
      height: 20%;
    }

    .row {
      align-items: center;
    }

    #container-form {
      width: 420px;
      background-color: transparent;
      border: 2px solid rgba(255, 255, 255, .2);
      border-radius: 10px;
      color: white;
      padding: 30px 40px;
      box-shadow: 0 0 10px rgba(0, 0, 0, .2);
    }

    #container-form h2 {
      font-size: 45px;
      text-align: center;
    }

    .input-box {
      position: relative;
      width: 100%;
      height: 50px;
      margin: 30px 0;
    }

    .input-box input {
      width: 100%;
      height: 100%;
      background-color: transparent;
      border: 2px solid rgba(255, 255, 255, .2);
      border-radius: 40px;
      outline: none;
      font-size: 16px;
      color: white;
      padding: 15px 40px 15px 15px;
    }

    .input-box input::placeholder {
      color: rgb(185, 181, 181);
    }

    button {
      width: 40%;
      height: 60%;
      background-color: white;
      border: none;
      border-radius: 40px;
      cursor: pointer;
      font-size: 16px;
      color: #333;
      font-weight: 600;
      box-shadow: 0 0 10px rgba(0, 0, 0, .1);
    }
  </style>
</head>

<body>
  <nav>
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <a style="color: white;" class="nav-link" href="/">Inicio</a>
      </li>
      <li class="nav-item">
        <a style="color: white;" class="nav-link" href="/lista">Mostrar Lista</a>
      </li>
      <li class="nav-item">
        <a style="color: white;" class="nav-link" href="/cadastro">Cadastrar</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Editar</a>
      </li>
    </ul>
  </nav>
  <div id="topo">
    <h1>Editar</h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xl-3">
        <img src="/img/SoloLeveling.png" alt="" width="250px" height="350px">
      </div>
      <div class="col-xl-6">
        <div style="display: flex; justify-content: center;">
          <div id="container-form">
            <form onsubmit="editar(`<%= selecionado ? selecionado.id_anime : '' %>`); return false;">
              <h2>Edição Anime</h2>
              <div class="input-box">
                <input name="nome" type="text" placeholder="Nome" value="<%= selecionado ? selecionado.nome : '' %>">
              </div>
              <div class="input-box">
                <input name="genero" type="text" placeholder="Gênero"
                  value="<%= selecionado ? selecionado.genero : '' %>">
              </div>
              <div class="input-box">
                <input name="nota" type="text" placeholder="Nota" value="<%= selecionado ? selecionado.nota : '' %>">
              </div>
              <div style="display: flex; justify-content: space-around;">
                <button type="button" onclick="pesquisarNome()">Pesquisar</button>
                <button type="submit">Atualizar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="col-xl-3">
        <img src="/img/gojo.png" alt="" width="250px" height="350px">
      </div>
    </div>
  </div>

  <script>
    function pesquisarNome() {
      const nome = window.prompt("Digite o nome do anime: ");
      window.location.href = `http://localhost:3000/editar/${nome}`
    }

    function editar(id_anime) {
      const nome = document.querySelector('input[name="nome"]').value;
      const genero = document.querySelector('input[name="genero"]').value;
      const nota = document.querySelector('input[name="nota"]').value;

      fetch(`/editar/${id_anime}`, {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ nome, genero, nota })
    })
    .then(response => {
        if (response.ok) {
            return response.json(); 
        }
        throw new Error("Erro ao editar Anime");
    })
    .then(data => {
        alert(data.message); 
        window.location.href = '/editar';
    })
    .catch(error => {
        alert(error.message); 
    });
    }
  </script>
</body>

</html>